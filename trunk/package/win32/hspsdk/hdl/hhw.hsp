;	y18		; リストボックス下端
	y19 = gh	; 下端

	; right pane (edit)
	; X
	x20 = x19 + 4
	x29 = gw
	x21 = x20 + 18
	x22 = x20 + (x29-x20) * 23 / 100
	x23 = x29 - (x29-x20) * 23 / 100
	; Y
	y20 = 0		; 上端
	y21 = y20 + 4	; ここから コントロール類
;	y22 = 後で	; ここから エディットボックス
	y29 = gh	; 下端


	; コントロール フィット

	;  left pane
