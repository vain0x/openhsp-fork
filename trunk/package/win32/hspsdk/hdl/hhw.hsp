	a = limit(x29-x23, 0, 90)
	if a >= 80 {
		MoveWindow objhwnd(id_tagbox),  x22,   y21, x23-x22, 20,  1
		MoveWindow objhwnd(id_delbtn),  x29-a, y21, a-4,     20,  1
	} else {
